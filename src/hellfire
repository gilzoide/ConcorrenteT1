exe = 'main'

build {
	input = utils.glob '*.cpp',
	flags = '-Wall -g -O3 -fopenmp',
	std = 'c++11',
	output = exe
}

target ('run', command {
	command = 'time -f "Tempo gasto: %e s" ' .. utils.makePath (hell.outdir, exe)
			.. (multi and ' multi' or '')
			.. (numLinhas and ' < matrizes/matriz' .. numLinhas .. '.txt' or ''),
	runTarget = true
})
