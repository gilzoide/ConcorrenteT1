exe = 'main'

build {
	input = utils.glob '*.cpp',
	flags = '-Wall -g -O3 -lpthread',
	std = 'c++11',
	output = exe
}

if utils.getOption 'target' == 'run' then
	run = command {
		cmd = utils.makePath (hell.outdir, exe) .. 
				(multi and ' multi' or '') ..
				(numLinhas and ' < matrizes/matriz' .. numLinhas .. '.txt' or '')
	}
end
