exe = 'main'

build {
	input = utils.glob '*.cpp',
	flags = '-Wall -g -O3', -- O3, que os testes do sequencial s√£o graaaaaaaande
	std = 'c++11',
	output = exe
}

if utils.getOption 'target' == 'run' then
	run = command {
		cmd = utils.makePath (hell.outdir, exe) .. (numLinhas and ' < matrizes/matriz' .. numLinhas .. '.txt' or '')
	}
end
